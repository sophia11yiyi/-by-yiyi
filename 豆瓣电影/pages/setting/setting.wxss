.container{
  display: flex;
  flex-direction: column;
  background-color: #efeff4;
  
}
.category-item{
  background-color: #fff;
  width: 100%;
  border-top: 1rpx solid #d9d9d9;
  border-bottom: 1rpx solid #d9d9d9;
  margin: 20rpx 0;
}
.category-item.personal-info{
  display: flex;
  height: 130rpx;
  padding: 20rpx 0;
}
.category-item.personal-info .user-avatar{
 width: 130rpx;
 height: 130rpx;
 padding: 0 30rpx;
}

.category-item.personal-info .user-avatar image{
  width: 100%;
  height: 100%;
  border-radius:2rpx;
}
.category-item.personal-info .user-name{
  flex: 1;
  margin-right: 30rpx;
}
.detail-item{
  padding-left: 30rpx;
  display: flex;
  flex-direction: row;
  height: 85rpx;
  width: 100%;
  align-items: center;
  border-bottom: 1rpx solid #d9d9d9;
}
.detail-item:last-child{
    border-bottom:none;
}
.detail-item image{
    height: 40rpx;
    width:40rpx;
}
.detail-item text{
  flex: 1;
  margin-left: 30rpx;
}
.detail-item .detail-item-btn{
    width: 50rpx;
    height:100%;
    text-align: center;
    position: relative;
    margin-right: 40rpx;
    
}
.detail-item .detail-item-btn::after{
    display: inline-block;
    content:'';
    width: 16rpx;
    height: 16rpx;
    position: absolute;
    top: 30%;
    left: 0;
    color: #d9d9d9;
    margin-top: 5rpx;
     border:3rpx #d9d9d9 solid; 
     border-top-color:transparent; 
     /*透明呀再转换角度*/
     border-left-color:transparent; 
     transform: rotate(-45deg); 
}
