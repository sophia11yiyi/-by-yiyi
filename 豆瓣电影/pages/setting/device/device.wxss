.container {
  display: flex;
  flex-direction: column;
  background-color: #efeff4;
  width: 100%;
  height: 100%;
  align-items: center;
  min-height: 100vh;
  /*vh等于viewport高度的1/100 vwvh等于viewport宽度度的1/100*/
}

.category-item {
  width: 100%;
  margin: 20rpx 0;
  background-color: #fff;
  border-top: 1rpx solid #d9d9d9;
  border-bottom: 1rpx solid #d9d9d9;
}

.detail-item {
  display: flex;
  padding-left: 30rpx;
  border-bottom: 1rpx solid #d9d9d9;
  height: 85rpx;
  align-items: center;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-item text {
  flex: 1;
  color: #7f8389;
  font-size: 24rpx;
}

.detail-item text:last-child {
  flex: 1;
  text-align: right;
  padding-right: 20rpx;
}
